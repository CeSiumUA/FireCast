<Window x:Class="FireCast.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FireCast.Server"
        mc:Ignorable="d"
        Title="FireCast" Height="85" Width="237" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Capture" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" IsEnabled="{Binding IsCaptureRunable}" Width="187" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" IsEnabled="{Binding IsCaptureCancellable}" Width="187" Click="Button_Click_1"/>

    </Grid>
</Window>
